<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

     <script src="https://kit.fontawesome.com/2040c8c54c.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <header class="border border-dark bg-white text-black">
         <nav class="navbar navbar-expand-lg navbar-light">


                     <div class = "col-lg-3">
                       <h3 class="logo">LOGO</h3>
                     </div>
                     <div class="col-lg-9 ml-auto text-right">

           <!--会員がログインした場合-->
            <% if customer_signed_in? %>

               <%= link_to  public_customers_my_page_path(current_public.id), class: 'btn btn-outline-secondary text-black' do %>
               マイページ
              <% end %>
              <%= link_to public_items_path, class: 'btn btn-outline-secondary text-black' do %>
                商品一覧
              <% end %>
              <%= link_to public_cart_items_index_path, class: 'btn btn-outline-secondary text-black' do %>
                カート
              <% end %>
              <%= link_to destroy_customers_sign_out_session_path, method: :delete, class: 'btn btn-outline-secondary text-black' do %>
              　ログアウト
              <% end %>

             <!--管理者がログインした場合-->
            <% elsif admin_signed_in? %>
              <%= link_to admin_items_path, class: 'btn btn-outline-secondary align-middle' do %>
                商品一覧
              <% end %>
              <%= link_to admin_customers_path, class: 'btn btn-outline-secondary text-lg-block' do %>
              　会員一覧
              <% end %>
              <%= link_to admin_path, class: 'btn btn-outline-secondary text-black' do %>
              　注文履歴一覧
              <% end %>
              <%= link_to admin_genres_path, class: 'btn btn-outline-secondary text-black' do %>
              　ジャンル一覧
              <% end %>
              <%= link_to destroy_admin_session_path, method: :delete, class: 'btn btn-outline-secondary text-black' do %>
              　ログアウト
              <% end %>
            <% else %>

              <%= link_to public_about_path, class: 'btn btn-outline-secondary text-black' do %>
                About
              <% end %>
              
              <%= link_to public_items_path, class: 'btn btn-outline-secondary ms-5 text-black' do %>
                商品一覧
              <% end %>
              <%= link_to new_customer_registration_path, class: 'btn btn-outline-secondary text-black' do %>
                新規登録
              <% end %>
              <%= link_to new_customer_session_path, class: 'btn btn-outline-secondary text-black' do %>
                ログイン
              <% end %>
            <% end %>
            </div>


          </nav>
    </header>

     <main>
    <%=yield %>
    </main>

    <footer class="pt-5 pb-4 ">
      <div class="container mt-12">
      </div>
    </footer>
  </body>
</html>

