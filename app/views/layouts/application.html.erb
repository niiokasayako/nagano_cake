<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
     <script src="https://kit.fontawesome.com/2040c8c54c.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body class="d-flex flex-column vh-100">
    <% flash.each do |key, value| %>
    　<%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <header class="bg-dark text-white">
      <nav class="navbar navbar-expand-lg navbar-light">

        <div class="container">
          <a class="navbar-brand text-light p-3" href="/">LOGO</a>

          <button class="navbar-toggler-light" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav text-light ml-auto">
           
           <!--会員がログインした場合-->
            <% if customer_signed_in? %>
             <li class="nav-item">
               <%= link_to  my_page_customers_path(current_public.id), class: 'nav-link text-light' do %>
               マイページ
              <% end %>
             </li>
             
             <li class="nav-item">
              <%= link_to items_path, class: 'nav-link text-light' do %>
                商品一覧
              <% end %>
             </li>

             <li class="nav-item">
              <%= link_to cart_items_path, class: 'nav-link text-light' do %>
                カート
              <% end %>
             </li>
             
             <li class="nav-item">
              <%= link_to destroy_customers_sign_out_session_path, method: :delete, class: 'nav-link text-light' do %>
              　ログアウト
              <% end %>
             </li>
             <!--管理者がログインした場合-->
            <% elsif admin_signed_in? %>
             <li class="nav-item">
              <%= link_to admin_items_path, class: 'nav-link text-light' do %>
                商品一覧
              <% end %>
             </li>

             <li class="nav-item">
              <%= link_to admin_customers_path, class: 'nav-link text-light' do %>
              　会員一覧
              <% end %>
             </li>
             
             <li class="nav-item">
              <%= link_to admin_path, class: 'nav-link text-light' do %>
              　注文履歴一覧
              <% end %>
             </li>
             
             <li class="nav-item">
              <%= link_to admin_genres_path, class: 'nav-link text-light' do %>
              　ジャンル一覧
              <% end %>
             </li>
             
             <li class="nav-item">
              <%= link_to destroy_customers_sign_out_session_path, method: :delete, class: 'nav-link text-light' do %>
              　ログアウト
              <% end %>
              
            <% else %>
            <li class="nav-item">
              <%= link_to about_path, class: 'nav-link text-light' do %>
                about
              <% end %>
             </li>
             <li class="nav-item">
              <%= link_to items_path, class: 'nav-link text-light' do %>
                商品一覧
              <% end %>
             </li>
             <li class="nav-item">
              <%= link_to sign_up_customers_registration_path, class: 'nav-link text-light' do %>
                新規登録
              <% end %>
             </li>
             <li class="nav-item">
              <%= link_to sign_in_customers_session_path, class: 'nav-link text-light' do %>
                ログイン
              <% end %>
             </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

     <main class="mb-auto">
    <%=yield %>
    </main>

    <footer class="pt-5 pb-4">
      <div class="container mt-12">
      </div>
    </footer>
  </body>
</html>

