<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "col-md-3 bg-light text-center my-4 ">商品新規登録</h4>
  </div>

  <div class = "row">
    <div class = "col-md-2"></div>
     <%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
      <table>
        <tr>
          <th class = "font-weight-normal pr-5">商品画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">商品名</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">商品説明</th>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">ジャンル</th>
          <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: '‥選択してください‥'} %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">税抜価格</th>
          <td><%= f.text_field :price %>円</td>
        </tr>
      </table>

        <div class ="actions ">
          <p><%= f.submit '新規登録', class:"btn btn-success px-5 m-3 " %></p>
        </div>
      <% end %>
    <div class = "col-md-2"></div>
  </div>

</div>