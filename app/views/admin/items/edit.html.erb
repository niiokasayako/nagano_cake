<h2>商品編集</h2>

<% if @item.errors.any? %>
  <%= @item.errors.count %>errors prohibited this item from being saved:
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @item do |f| %>

<div class = "field">
  <a>商品画像</a>
 <%= f.file_field :image, accept: "image/*" %>
</div>

  <div class = "field">
    <a>商品名</a>
     <%= f.text_field :name %>
  </div>

  <div class = "field">
    <p>商品説明</p>
      <%= f.text_area :introduction %>
  </div>
  
  <div class = "field">
    <a>税抜価格</a>
     <%= f.text_field :price %>円
  </div>

  <div class ="actions">
    <%= f.submit '変更を保存' %>
  </div>

<% end %>

