<h2>商品一覧</h2>
                
    
      <%= link_to new_admin_item_path do %>
        <i class="fa-thin fa-circle-plus"></i>
      <% end %>
    
    
    <table class= "table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
     
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to items_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
            