<div class="col-md-8 offset-md-1">  
    <h2>ジャンル一覧・追加</h2>
       <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
          <div class="field">
              <a>ジャンル名</a>
                <%= f.text_field :name %>
              <a>
                <%= f.submit "新規登録" %>
              </a>
          </div>
      <% end %>
  
    
          <tbody>
            <th>ジャンル</th>
                <% @genres.each do |genre| %>
                    <tr>
                        <td>
                            <%= genre.name %>
                        </td>
                                  
                        <%= link_to '編集する', edit_admin_genre_path(genre.id) %>
                                   
                    </tr>
                <% end %>
        </tbody>
  </div>