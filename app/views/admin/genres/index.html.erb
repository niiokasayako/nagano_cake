  <div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "bg-light text-center my-4 ">ジャンル一覧・追加</h4>
    </div>

    <div class = "row">
       <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
          <div class="field my-4">
              <b class ="pr-5 ">ジャンル名</b>
                <%= f.text_field :name %>
              <a>
                <%= f.submit "新規登録", class:"btn btn-success px-5 m-3" %>
              </a>
          </div>
      <% end %>
      </div>
  
  <div class = "row">
    <div class = "col-md-5">
        <table class ="table table-striped">
      <thead>
        <tr>
            <th>ジャンル</th>
            <th></th>
        </tr>
      </thead>
      
      <tbody>
                <% @genres.each do |genre| %>
                    <tr>
                        <td>
                            <%= genre.name %>
                        </td>
                        <td>  
                           <%= link_to edit_admin_genre_path(genre.id) do %>
                             <button type="button" class="btn btn-success text-md-block">編集する</button>
　                         <% end %>
                         </td>         
                    </tr>
                <% end %>
        </tbody>
      </table>
      </div>
  </div>
  </div>