<h2>会員一覧</h2>
    
    <table>
      <thead>
        <tr>
          <th></th>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
     
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted = false %>
                <P class = "text_color-green">有効</P>
              <% else %>
                <P class = "text_color-#6c757d">退会</P>
              <% end %>
              </td>
          </tr>
        <% end %>
        <%= paginate customer %>
      </tbody>
    </table>
