<h2><%= @customer.last_name + @customer.first_name%>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch  do |f| %>

  <p>会員ID</p>
  <%= @customer.id %>

<div class = "field">
  <p>氏名</p>
 <%= f.text_field :last_name %> <%= f.text_field :first_name %>
</div>

  <div class = "field">
    <p>フリガナ</p>
     <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
  </div>

  <div class = "field">
    <p>郵便番号</p>
      <%= f.text_field :postal_code %>
  </div>
  
  <div class = "field">
    <p>住所</p>
     <%= f.text_field :address %>
  </div>
  
  <div class = "field">
    <p>電話番号</p>
     <%= f.text_field :telephone_number %>
  </div>
  
  <div class = "field">
    <p>メールアドレス</p>
     <%= f.text_field :email %>
  </div>
  
  <div class = "field">
    <p>会員ステータス</p>


  </div>

  <div class ="actions">
    <%= f.submit '変更を保存' %>
  </div>

<% end %>


