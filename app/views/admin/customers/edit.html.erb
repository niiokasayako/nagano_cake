<div class = "container">
  <div class = "row">
    <h4 class = "bg-light text-center px-4 my-4 "><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h4>
  </div>

  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch  do |f| %>

  <div class = "row">
    <table>
        <tr>
          <th class = "font-weight-normal pt-3 pr-5">会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pt-3 pr-5">氏名</th>
          <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pt-3 pr-5">フリガナ</th>
           <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pt-3 pr-5">郵便番号</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pt-3 pr-5">住所</th>
          <td><%= f.text_field :address, class:"w-100" %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pt-3 pr-5">電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pt-3 pr-5">メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td><%= f.radio_button :is_deleted, "false" %>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, "true" %>
            <%= f.label :is_deleted, "退会" %>
          </td>
        </tr>
    </table>
  </div>
  <div class = "row mt-4">
    <div class = "col-md-2"></div>
    <div class = "col-md-3">
      <%= f.submit '変更を保存', class:"btn btn-success" %>
    </div>
  <% end %>
  </div>
</div>
