<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "col-md-3 bg-light text-center my-4 ">マイページ</h4>
  </div>
  <div class = "row">
    <b>登録情報</b>
    <%= link_to public_customers_information_edit_path(@customer) do %>
         <button type="button" class="btn btn-success text-md-block">編集する</button>
　    <% end %>
  </div>
  
  <div class = "row">
    <table class="table table-bordered">
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
          </tr>
          <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
          <th>住所</th>
          <td><%= @customer.adress %></td>
          </tr>
          <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
    </table>
  </div>
  
  <div class = "row">
    <b>注文履歴</b>
    <%= link_to public_orders_index_path, class: 'btn btn-primary align-middle' do %>
      一覧を見る
    <% end %>
  </div>

  </div>
