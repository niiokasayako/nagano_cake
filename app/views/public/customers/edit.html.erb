<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "bg-light text-center w-25 my-4 ">会員情報編集</h4>
  </div>

  <div class = "row">
    <%= form_with model: @customer, url: public_customers_information_path do |f| %>

      <table>
        <tr>
          <th class = "font-weight-normal pr-5">氏名</th>
          <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">フリガナ</th>
          <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">郵便番号</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">住所</th>
          <td><%= f.text_field :address, class: "w-100" %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
      </table>
  </div>
  <div class = "row mt-4">
    <div class = "col-md-2"></div>
    <div class = "col-md-3">
      <a><%= f.submit '編集内容を保存', class:"btn btn-success" %></a>
    </div>
  <% end %>
    <div class = "col-md-2"></div>
    <div class = "col-md-3">
      <%= link_to public_customers_unsubscribe_path, class: 'btn btn-danger' do %>
        退会する
      <% end %>
    </div>
  </div>
</div>
    

