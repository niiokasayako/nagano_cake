<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "col-md-3 bg-light text-center my-4 ">注文情報入力</h4>
  </div>

  <div class = "row">
    <div class = "col-md-2"></div>
    <div class = "col-md-8">
      <%= form_with model: @order, url: public_orders_confirm_path, method: :post do |f| %>
        <div class="field">
          <h5 class = "pr-5">支払方法</h5>
            <p><%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
              <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %></p>
            <p><%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
              <%= f.label :payment_method,  Order.payment_methods_i18n[:transfer] %></p>
        </div>

        <div class = "field">
          <h5 class = "pr-5">お届け先</h5>
            <p><%= f.radio_button :customer_id, [current_customer.postal_code, current_customer.address, current_customer.last_name, current_customer.first_name] %>
                <%= f.label :customer_id, "ご自身の住所"%>
                <%= @customer.address_display %></p>

             <p><%= f.radio_button [:postal_code, :address, :name], [:postal_code, :address, :name] %>
                <%= f.label [:postal_code, :address, :name], "新しいお届け先"  %></p>
                <p><%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
                   <%= f.text_field :postal_code %></p>
                <p><%= f.label :address, "住所" %>
                 　<%= f.text_field :address %></p>
                <p><%= f.label :name, "宛名" %>
                   <%= f.text_field :name %></p>
        </div>

        <div class ="actions">
          <p><%= f.submit '確認画面へ進む', class:"btn btn-primary" %></p>
        </div>
      <% end %>
    </div>

    <div class = "col-md-2"></div>
  </div>

</div>