<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "col-md-3 bg-light text-center my-4 ">注文情報入力</h4>
  </div>

  <div class = "row">

 
      <%= form_with model: @order, url: public_orders_confirm_path, method: :post do |f| %>
        <div class="field">
          <h5 class = "font-weight-bold">支払方法</h5>
            <p><%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
              <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %></p>
            <p><%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
              <%= f.label :payment_method,  Order.payment_methods_i18n[:transfer] %></p>
        </div>

        <div class = "field">
          <h5 class = "font-weight-bold">お届け先</h5>
            <p><%= f.radio_button :address_number, 1 %>
                <%= f.label :address_number_1, "ご自身の住所"%></p>
                <p>  <%= @customer.address_display %></p>

             <p><%= f.radio_button :address_number, 2 %>
                <%= f.label :address_number_2, "新しいお届け先"  %></p>
                <table>
                  <tr>
                    <th class = "font-weight-light">郵便番号（ハイフンなし）</th>
                    <td> <%= f.text_field :postal_code %></td>
                  </tr>
                  <tr>
                    <th class = "font-weight-light">住所</th>
                    <td><%= f.text_field :address, class:"w-100" %></td>
                  </tr>
                  <tr>
                    <th class = "font-weight-light">宛名</th>
                    <td><%= f.text_field :name %></td>
                  </tr>
                </table>
        </div>

        <div class ="actions">
          <p><%= f.submit '確認画面へ進む', class:"btn btn-primary" %></p>
        </div>
      <% end %>
    </div>



</div>