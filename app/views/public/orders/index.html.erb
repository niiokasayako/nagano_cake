<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "col-md-3 bg-light text-center my-4 ">注文履歴一覧</h4>
  </div>

  <div class = "row">
    <table class="col-md-12 table table-bordered">
      <thead class ="thead-light">
        <tr>
          <th scope="col">注文日</th>
          <th scope="col">配送先</th>
          <th scope="col">注文商品</th>
          <th scope="col">支払金額</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><p><%= order.postal_code %></p><p><%= order.address %></p><p><%= order.name %></p></td>
            <td><% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %>
                  <% end %>
            </td>
            <td><%= order.total_payment.to_s(:delimited) %>円</td>
            <td><%= link_to public_order_path(order.id), class: 'btn btn-primary align-middle' do %>
                表示する
                <% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>