<div class = "container">
  <div class "row" >
    <div class="col-md-4">
      <div>
        <%= image_tag @item.get_image(100,70) %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class = "mr-2"><%= @item.name %></h2>
      <p><%= @item.introduction %></p>

  
      <p>￥<%= (@item.price * 1.1).floor %> (税込）</p>
     
      <%= form_with model: @cart_item, url: '/public/cart_items/create', method: :post do |f| %>
  　　    <%= f.select :amount, *[1..10], { include_blank: '個数選択'} %>
  　     <span><%= f.submit 'カートに入れる', class:"btn btn-success m-3 " %></span>
      <% end %>
　</div>
</div>