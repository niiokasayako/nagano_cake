<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "col-md-2 bg-light text-center my-4 ">ショッピングカート</h4>

    <div class = "col-md-7">
      <%= link_to public_cart_items_destroy_all_path, method: :delete do %>
        <button type="button" class="btn btn-danger">カートを空にする</button>
      <% end %>
    </div>
  </div>

  <div class = "row">
    <div class = "col-md-1"></div>
    <table class="table table-bordered">
  <thead class ="thead-light">
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価（税込）</th>
      <th scope="col">数量</th>
      <th scope="col">小計</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %> </td>
      <td>
        <%= form_with model: cart_item, url: '/public/cart_items/update', method: :patch do |f| %>
  　　    <%= f.select :amount, *[1..10] %>
  　     <span><%= f.submit '変更', class:"btn btn-success m-3 " %></span>
      <% end %>
      </td>
      <td><%= cart_item.subtotal %> </td>
      <td><%= link_to public_cart_items_destroy_path, method: :delete do %>
        <button type="button" class="btn btn-danger">削除する</button>
      <% end %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
  </div>

  <div class = "row">
    <div class = "col-md5">
    <%= link_to public_root_path, class: 'btn btn-primary align-middle' do %>
      買い物を続ける
    <% end %>
    </div>

    <div>
     <table class="table table-bordered">
       <% @cart_items.each do |cart_item| %>
       <% @total += cart_item.subtotal %>
        <tr>
          <th class = "thead-light">合計金額</th>
          <td><%= @total %></td>
        </tr>
        <% end %>
    </table>
    </div>
   </div>

  </div>



