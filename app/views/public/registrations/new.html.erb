<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "bg-light text-center w-25 my-4  ">新規会員登録</h4>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table>
      <tr>
        <th class = "pr-5 font-weight-normal">名前</th>
        <td>
         <%= f.label :last_name, "(姓)" %>
         <%= f.text_field :last_name %>
         <%= f.label :first_name, "(名)" %>
         <%= f.text_field :first_name %>
        </td>
      </tr>
      <tr>
        <th class = "pr-5 font-weight-normal">フリガナ</th>
        <td>
          <%= f.label :last_name_kana, "(セイ)" %>
          <%= f.text_field :last_name_kana %>
          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana %>
        </td>
      </tr>
      <tr>
        <th class = "pr-5 font-weight-normal"><%= f.label :email, "メールアドレス" %></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>


      <tr>
        <th class = "pr-5 font-weight-normal"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th class = "pr-5 font-weight-normal"><%= f.label :address, "住所" %></th>
        <td><%= f.text_field :address, class:"w-100" %></td>
     </tr>
     <tr>
       <th class = "pr-5 font-weight-normal"><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></th>
       <td><%= f.telephone_field :telephone_number %></td>
     </tr>
    <tr>
      <th class = "pr-5 font-weight-normal"><%= f.label :password, "パスワード（6文字以上）" %></th>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>

    <tr>
      <th class = "pr-5 font-weight-normal"><%= f.label :password_confirmation, "パスワード（確認用）" %></th>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "新規登録", class: "btn btn-success mt-4 w-50" %></td>
    </tr>
  </table>
  <% end %>

  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "bg-light text-center my-4 ">既に登録済みの方</h4>
  </div>
  <div class = "row mb-5">
    <div class = "col-md-2"></div>
    <a href="/customers/sign_in">こちら</a>からログインしてください。
  </div>
</div>
